@{
    var currentStep = (int?)ViewData["CurrentStep"] ?? 1;
}
<div class="checkout-steps-wrapper">
    <div class="checkout-steps d-flex align-items-center">
        <div class="step-item @(currentStep == 1 ? "active" : (currentStep > 1 ? "completed" : ""))">
            <span class="step-circle">@((currentStep > 1) ? (object)"✓" : 1)</span>
            <span class="step-label">Cart</span>
        </div>
        <div class="step-line @(currentStep > 1 ? "step-line-active" : "")"></div>
        <div class="step-item @(currentStep == 2 ? "active" : (currentStep > 2 ? "completed" : ""))">
            <span class="step-circle">@((currentStep > 2) ? (object)"✓" : 2)</span>
            <span class="step-label">Place order</span>
        </div>
        <div class="step-line @(currentStep > 2 ? "step-line-active" : "")"></div>
        <div class="step-item @(currentStep == 3 ? "active" : "")">
            <span class="step-circle">3</span>
            <span class="step-label">Payment</span>
        </div>
    </div>
</div>

<style>
    .step {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .step.active {
        background: #1976d2;
        color: #fff;
    }

    .checkout-steps-wrapper {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
        padding: 18px 32px 18px 32px;
        margin-bottom: 32px;
        margin-top: 8px;
        max-width: 100%;
    }

    .checkout-steps {
        width: 100%;
    }

    .step-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 120px;
        position: relative;
        z-index: 1;
    }

    .step-circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #e0e0e0;
        color: #1976d2;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 4px;
        box-shadow: 0 2px 6px rgba(25, 118, 210, 0.08);
    }

    .step-item.active .step-circle {
        background: #1976d2;
        color: #fff;
    }

    .step-label {
        font-size: 15px;
        color: #333;
        font-weight: 500;
    }

    .step-line {
        flex: 1;
        height: 3px;
        background: #1976d2;
        opacity: 0.2;
        margin: 0 12px;
        min-width: 80px;
        max-width: 100%;
        border-radius: 2px;
        z-index: 0;
    }

    .step-line-active {
        background: #1976d2;
        opacity: 1;
    }
</style>