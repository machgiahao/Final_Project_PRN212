
<style>
.sidebar {
    width: 220px;
    min-height: 100vh;
    background: #fff;
    border-right: 1.5px solid #e3eafc;
    /* Xóa hoặc giảm padding-left/margin-left nếu có */
    padding: 32px 0 32px 0;
    /* Đảm bảo không có margin bên trái */
    margin-left: 0;
    /* Đảm bảo sát lề trái */
    position: relative;
    left: 0;
}

.sidebar-header {
    font-weight: bold;
    font-size: 1.2em;
    padding: 0 24px 16px 24px;
}

.sidebar-menu {
    list-style: none;
    padding: 0;
    margin: 0;
}

.sidebar-menu li {
    margin-bottom: 8px;
}

.sidebar-menu a {
    display: block;
    padding: 10px 24px;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.2s;
}

.sidebar-menu a.active,
.sidebar-menu a:hover {
    background: #e6f0ff;
    color: #1976d2;
    font-weight: 500;
}

.sidebar-menu ul {
    list-style: none;
    padding-left: 20px;
}
</style>


<aside class="sidebar">
    <div class="sidebar-header">
        <span>Admin</span>
    </div>
    <ul class="sidebar-menu">
        <li>
            <a href="/Admin/Dashboard">
                <span>Dashboard</span>
            </a>
        </li>
        <li>
            <a href="/User/Index" class="@(Context.Request.Path.Value.Contains("/User") ? "active" : "")">
                <span>Manage Users</span>
            </a>
        </li>
        <li>
            <a href="/Book/Index" class="@(Context.Request.Path.Value.Contains("/Book") ? "active" : "")">
                <span>Manage Books</span>
            </a>
        </li>
        <li>
            <a href="/Order/Index" class="@(Context.Request.Path.Value.Contains("/Order") ? "active" : "")">
