@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .navbar-custom {
            background: #fff;
            border-bottom: 1px solid #e3e6ef;
            box-shadow: 0 2px 8px rgba(60,72,88,0.04);
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .navbar-brand {
            font-size: 1.3rem;
            font-weight: 600;
            color: #00bfff !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .navbar-brand i {
                font-size: 1.5rem;
            }

        .search-bar {
            flex: 1 1 0%;
            max-width: 600px;
            margin: 0 2rem;
        }

        .search-input-group {
            border-radius: 8px;
            box-shadow: 0 1px 2px rgba(60,72,88,0.04);
            background: #f8fafc;
        }

        .search-input-group input {
            border: none;
            background: transparent;
            font-size: 1rem;
        }

        .search-input-group input:focus {
            box-shadow: none;
            background: transparent;
        }

        .icon-btn {
            background: none;
            border: none;
            color: #00bfff;
            font-size: 1.3rem;
            position: relative;
        }

        .cart-badge {
            position: absolute;
            top: -6px;
            right: -8px;
            background: #ff5a5f;
            color: #fff;
            font-size: 0.7rem;
            border-radius: 50%;
            padding: 2px 6px;
        }

        .account-link {
            color: #888;
            font-size: 1.05rem;
            margin-left: 1.5rem;
            text-decoration: none;
        }

        .account-link:hover {
            color: #00bfff;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu {
            margin-top: 0;
            transition: none;
        }
    </style>
</head>
@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var displayName = User.FindFirst(ClaimTypes.Name)?.Value;
    var role = User.FindFirst(ClaimTypes.Role)?.Value ?? "Guest";
}
<body>
    <header>
        <nav class="navbar navbar-custom d-flex align-items-center justify-content-center">
            <div class="container d-flex align-items-center justify-content-between">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fa-solid fa-book"></i>
                    FBook
                </a>
                <!-- Search Bar -->
                <form class="search-bar d-flex" method="get" action="/Index">
                    <div class="input-group search-input-group w-100">
                        <span class="input-group-text bg-transparent border-0">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </span>
                        <input type="text" class="form-control shadow-none" name="q" placeholder="What are you looking for today?" />
                    </div>
                </form>
                <!-- Cart and Account -->
                <div class="d-flex align-items-center">
                    <a href="/Cart" class="icon-btn position-relative me-3">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <span class="cart-badge">1</span>
                    </a>
                    @if (isAuthenticated && !string.IsNullOrEmpty(displayName))
                    {
                        <div class="dropdown">
                            <a class="account-link dropdown-toggle" href="#" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user"></i> @displayName
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                @if (role == "Admin")
                                {
                                    <li><a class="dropdown-item" href="/Admin/Dashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/Admin/Users">Manage Account</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="/Profile">Profile</a></li>
                                }
                                <li><a class="dropdown-item" href="/Orders/History">Order history</a></li>
                                <li><a class="dropdown-item" href="/Auth/Logout">Logout</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="/Auth/Login" class="account-link">Account</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookManagement - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
