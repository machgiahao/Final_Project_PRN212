@page
@model BookManagement.Pages.Auth.RegisterModel
@{
}

<h2>Register</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="RegisterViewModel.Username"></label>
        <input asp-for="RegisterViewModel.Username" />
        <span asp-validation-for="RegisterViewModel.Username"></span>
    </div>
    <div>
        <label asp-for="RegisterViewModel.Email"></label>
        <input asp-for="RegisterViewModel.Email" />
        <span asp-validation-for="RegisterViewModel.Email"></span>
    </div>
    <div>
        <label asp-for="RegisterViewModel.Password"></label>
        <input asp-for="RegisterViewModel.Password" type="password" />
        <span asp-validation-for="RegisterViewModel.Password"></span>
    </div>
    <div>
        <label asp-for="RegisterViewModel.ConfirmPassword"></label>
        <input asp-for="RegisterViewModel.ConfirmPassword" type="password" />
        <span asp-validation-for="RegisterViewModel.ConfirmPassword"></span>
    </div>
    <button type="submit">Register</button>
</form>
